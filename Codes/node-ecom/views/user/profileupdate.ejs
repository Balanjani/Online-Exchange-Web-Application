<%- include ../partials/header %>  <%- include ../partials/categories-navbar %>



<div class="container">
  <h2 style="text-align: center;">User Profile</h2>
  <div style=" text-align: center;">
  </div>



  <form method="post" action="/user/profileupdate" >
    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
      <input type="text" class="form-control" id="fdfd" name="username" value="<%= user.username %>" required="true" >
      
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Address</label>
      <input type="text" class="form-control" id="fdfd" name="address" value="<%= user.address %>" required="true" >
      
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Phone</label>
      <input type="text" class="form-control" id="fdfd" name="phone" value="<%= user.phone %>" required="true" >
      
    </div>
    
    
   
    <input type="hidden" name="id" value="<%= user._id %>" />
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

</div>

